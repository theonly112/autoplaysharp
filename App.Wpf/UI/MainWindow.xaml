<Window x:Class="App.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:repository="clr-namespace:autoplaysharp.App.UI.Repository" 
        xmlns:log="clr-namespace:autoplaysharp.App.UI.Log"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Path=MainViewModel, Source={StaticResource Locator}}">
    <Grid>
        <TabControl>
            <TabItem Header="Repository">
                <repository:RepositoryBrowser />
            </TabItem>
            <TabItem Header="Log">
                <log:LogView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
