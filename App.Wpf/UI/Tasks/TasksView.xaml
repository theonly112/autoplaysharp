                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>-->
            </Grid>
        </GroupBox>
        <!--<GroupBox Grid.Column="1" Header="Single Tasks">
            <StackPanel>
                <ToggleButton Margin="3"
                        Command="{Binding ExecuteSingleTaskCommand}"
                        CommandParameter="{x:Type Tasks:AutoFight}">
                    AutoFight
                </ToggleButton>
            </StackPanel>
        </GroupBox>-->
    </Grid>
</UserControl>
