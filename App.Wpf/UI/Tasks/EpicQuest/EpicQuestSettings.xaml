<UserControl x:Class="autoplaysharp.App.UI.Tasks.EpicQuest.EpicQuestSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:autoplaysharp.App.UI.Tasks.EpicQuest"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="250"
             d:DataContext="{d:DesignInstance local:EpicQuestSettingsViewModel}"
             DataContext="{Binding EpicQuest, Source={StaticResource SettingsViewModels}}">
    <StackPanel Orientation="Vertical">
        <CheckBox IsChecked="{Binding Settings.RestartForBioFarming}">Enable Bio-Farming (Restart Game)</CheckBox>
        <CheckBox IsChecked="{Binding Settings.UseClearTickets}">Use Clear Tickets</CheckBox>
    </StackPanel>
</UserControl>
